<div class="admin">
  <% if authorize(:vp) %>
    Admin Bar: 
    <% if !@user.approved %>
      <%= link_to "[Approve Account]", users_approve_path(@user), :method => :post %>
    <% end %>
    <% if authorize(:superuser) %>
      <%= link_to "[Edit]", edit_user_path(@user) %>
      <%= link_to "[Delete]", user_path(@user), :method => :delete, :confirm => "Are you sure you want to remove \"" + @user.fullname + "\"?" %>
      <%#= link_to "[Groups]", groups_person_path(@person.username) %>
    <% elsif !@user.approved %>
      <%= link_to "[Delete]", person_path(@person), :method => :delete, :confirm => "Are you sure you want to remove \"" + @person.fullname + "\"?" %>
    <% end %>
  <% end %>
</div>