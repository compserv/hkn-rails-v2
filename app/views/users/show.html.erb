<div class="admin">
  <% if authorize(:vp) %>
    Admin Bar:
    <% if !@user.approved %>
      <%= link_to "[Approve Account]", users_approve_path(@user), :method => :post %>
    <% end %>
    <% if authorize(:superuser) %>
      <%= link_to "[Edit]", edit_user_path(@user) %>
      <%= link_to "[Delete]", user_path(@user), :method => :delete, data: { confirm: "Are you sure you want to remove \"" + @user.full_name + "\"?" } %>
      <%#= link_to "[Groups]", groups_person_path(@person.username) %>
    <% elsif !@user.approved %>
      <%= link_to "[Delete]", user_path(@user), :method => :delete, :confirm => "Are you sure you want to remove \"" + @person.full_name + "\"?" %>
    <% end %>
  <% end %>
</div>
