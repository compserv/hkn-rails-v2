<h1>Officer Photo Upload</h1>
<%= form_tag nil, :multipart => true do %>
  <div class="field">
    <%= label :name, "Officer Name" %>
    <%= collection_select(:user, :id, @officers, :id, :full_name) %> </br>
  </div>
  <div class="field">
    <%= label :picture, "Picture" %>
    <%= file_field_tag :file_info %>
  </div>
  <div class="field">
    <%= label :submit, "" %>
    <label>&nbsp;</label>
    <%= submit_tag "Save changes" %>
  </div>
<% end %>