<h1>Listing Staff Members</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Office</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Home Page</th>
      <th>Interests</th>
      <th>Release Surveys</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @staff_members.each do |staff_member| %>
      <tr>
        <td><%= staff_member.full_name %></td>
        <td><%= staff_member.title %></td>
        <td><%= staff_member.office %></td>
        <td><%= staff_member.phone_number %></td>
        <td><%= staff_member.email %></td>
        <td><%= staff_member.home_page %></td>
        <td><%= staff_member.interests %></td>
        <td><%= staff_member.release_surveys %></td>
        <td><%= link_to 'Show', staff_member %></td>
        <td><%= link_to 'Edit', edit_staff_member_path(staff_member) %></td>
        <td><%= link_to 'Destroy', staff_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

