<div>
  <%= link_to 'Back', admin_cand_applications_path %>
</div>

<table id='applications'>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Committee Preferences</th>
    <th>Suggestion</th>
  </tr>
  <% @candidates.each do |u| %>
    <tr>
      <td><%= u.first_name %></td>
      <td><%= u.last_name  %></td>
      <td><%= u.phone_number %></td>
      <td><%= u.email %></td>
      <td><ol>
        <%- if u.committee_preferences 
          u.committee_preferences.split.each do |p|
        -%>
          <li><%= p %></li>
        <%- end end -%>
      </ol></td>
      </td>
      <td style="width: 40%;">
        <%= simple_format u.suggestion if u.suggestion %>
      </td>
    </tr>
  <% end %>
</table>
